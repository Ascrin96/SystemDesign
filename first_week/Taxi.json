//*********************************
// Рассчитать время и стоимость маршрута:
// Request:
// POST /route
{
    "points": [
        {
            "lat": 100,
            "lon": 100,
            "street": "work_street",
            "building": 5
        },
        {
            "lat": 150,
            "lon": 150,
            "street": "shop_street",
            "building": 5
        },
        {
            "lat": 200,
            "lon": 200,
            "street": "home_street",
            "building": 7
        }
    ],
    "selectedMode": "econom"
}

// Response:
// 200 - OK
// 400 - Запрос не корректный
// 500 - База данных не доступна
{
    "routeId" : 1,
    "routeTime": 15, // minutes
    "prices": {
        "econom": 100,
        "comfort": 150,
        "business": 300,
        "children": 150
    },
    "selectedMode": "econom",
    "taxis": [ 100, 115, 277] // id такси, которые рядом для выбранного тарифа
}
//_________________________________

//*********************************
// Изменить маршрут
// Request:
// PUT /routes/1
{
    "points": {...},
    "selectedMode": "children"
}

//Response:
// 200, 400, 404, 500
{
    "routeId" : 1,
    "routeTime": 20, // minutes
    "prices": {
        "econom": 110,
        "comfort": 160,
        "business": 290,
        "children": 150
    },
    "selectedMode": "children",
    "taxis": [ 100, 115, 277] // id такси, которые рядом для выбранного тарифа
}
//_________________________________

